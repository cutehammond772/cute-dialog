{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/types/*"],
      "@provider/*": ["./src/provider/*"],
      "@resolver/*": ["./src/resolver/*"],
      "@patcher/*": ["./src/patcher/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src"]
}
